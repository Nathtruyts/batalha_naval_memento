{
  "compilerOptions": {
    "target": "ES6",               // Converte o TypeScript para ES6 (moderno)
    "module": "CommonJS",          // Usa o padrão CommonJS para módulos (compatível com Node.js)
    "strict": true,                // Ativa verificações rigorosas do TypeScript
    "esModuleInterop": true,       // Permite importar módulos ES6 como o readline-sync
    "skipLibCheck": true,          // Ignora verificações em arquivos de bibliotecas
    "forceConsistentCasingInFileNames": true, // Evita problemas de case em nomes de arquivos
    "outDir": "./dist",            // Diretório onde os arquivos compilados serão gerados
    "rootDir": "./src"             // Diretório raiz dos arquivos TypeScript
  },
  "include": ["src/**/*.ts"],      // Inclui todos os arquivos .ts na pasta src
  "exclude": ["node_modules"]      // Exclui a pasta node_modules
}
